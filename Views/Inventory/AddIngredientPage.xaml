<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS_For_Small_Shop.Views.Inventory.AddIngredientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel>
            <TextBox Header="Ingredient Name" Text="{Binding NewIngredient.IngredientName, Mode=TwoWay}" />
            <TextBox Header="Stock" Text="{Binding NewIngredient.Stock, Mode=TwoWay}" />
            <Button Content="Add" Click="AddIngredient_Click" />
        </StackPanel>
    </Grid>
</Page>

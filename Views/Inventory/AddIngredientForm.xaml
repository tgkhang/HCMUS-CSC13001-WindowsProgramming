<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="POS_For_Small_Shop.Views.Inventory.AddIngredientForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converter="using:POS_For_Small_Shop.Converters"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views.Inventory"
    xmlns:model="using:POS_For_Small_Shop.Data.Models">

    <Border Background="White" Padding="20" CornerRadius="8" Width="400">
        <StackPanel Spacing="12">
            <TextBlock Text="Add Ingredient" FontSize="20" FontWeight="Bold" />

            <TextBox PlaceholderText="Ingredient Name" Text="{Binding NewIngredient.IngredientName, Mode=TwoWay}" />
            <TextBox PlaceholderText="Stock" Text="{Binding NewIngredient.Stock, Mode=TwoWay}" />
            <TextBox PlaceholderText="Unit" Text="{Binding NewIngredient.Unit, Mode=TwoWay}" />
            <TextBox PlaceholderText="Purchase Price" Text="{Binding NewIngredient.PurchasePrice, Mode=TwoWay}" />
            <TextBox PlaceholderText="Supplier" Text="{Binding NewIngredient.Supplier, Mode=TwoWay}" />
            <DatePicker Date="{Binding NewIngredient.ExpiryDate, Mode=TwoWay}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Cancel" Click="Cancel_Click" />
                <Button Content="Save" Click="Save_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

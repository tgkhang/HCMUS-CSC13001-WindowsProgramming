<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="POS_For_Small_Shop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="POS For Small Shop">

    
    <StackPanel x:Name="container" Orientation="Vertical" Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

        <TextBlock Text="Login" Style="{StaticResource TitleTextBlockStyle}"/>
        <TextBox
            Margin="0, 5, 0, 5"
            Header="Username"
            x:Name="usernameTextBox"
            Text="{Binding Username, 
            Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
        />

        <PasswordBox
            x:Name="passwordBox" Header="Password"
            Margin="0, 5, 0, 5"
            Password="{Binding Password, Mode=TwoWay}"
            />

        <StackPanel HorizontalAlignment="Center">
            <Button
                Style="{StaticResource AccentButtonStyle}"
                Name="loginButton"
                Content="Login"
                Height="35"
                Click="loginButton_Click"
                Margin="0, 5, 0, 5"
                />
        </StackPanel>
    </StackPanel>

</Window>

<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS_For_Small_Shop.Views.ReceiptPages.ViewReceipts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:class="using:POS_For_Small_Shop.ViewModels"
    xmlns:converters="using:POS_For_Small_Shop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:POS_For_Small_Shop.Data.Models"
    xmlns:viewmodels="using:POS_For_Small_Shop.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <!--  Converter  -->
            <converters:DateFormatter x:Name="DateFormatter" />
            <converters:DateTimeToFormattedStringConverter x:Name="DateTimeToFormattedStringConverter" />
            <converters:CurrencyFormatter x:Name="CurrencyFormatter" />
            <converters:StatusIconConverter x:Name="StatusIconConverter" />
            <converters:StatusColorConverter x:Name="StatusColorConverter" />
            <converters:DateToFormattedStringConverter x:Name="DateToFormattedStringConverter" />
            <converters:TimeToFormattedStringConverter x:Name="TimeToFormattedStringConverter" />

            <!--  Styles  -->
            <Style x:Key="ShiftGridStyle" TargetType="Grid">
                <Setter Property="Background" Value="#1E3A8A" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12" />
                <Setter Property="Margin" Value="0,4" />
                <Setter Property="Transitions">
                    <Setter.Value>
                        <TransitionCollection>
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DetailPanelStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAltHighBrush}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Margin" Value="16,0,0,0" />
            </Style>

            <Style x:Key="FilterControlStyle" TargetType="Control">
                <Setter Property="Margin" Value="0,0,16,0" />
                <Setter Property="MinWidth" Value="150" />
            </Style>

            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="0,0,8,0" />
                <Setter Property="Style" Value="{StaticResource AccentButtonStyle}" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="MainGrid" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            AutomationProperties.Name="Receipt Management Header"
            Background="#1E3A8A"
            CornerRadius="8">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                AutomationProperties.Name="Receipt Management Title"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Receipt Management" />
        </Border>

        <!--  Filter  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,16,0,16"
            Padding="12"
            AutomationProperties.Name="Filter Controls">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    x:Name="FilterStackPanel"
                    HorizontalAlignment="Left"
                    AutomationProperties.Name="Filter Options"
                    Orientation="Horizontal">
                    <CalendarDatePicker
                        x:Name="FilterStarDatePicker"
                        AutomationProperties.Name="From Date Calendar"
                        Header="From Date:"
                        PlaceholderText="Select start date"
                        Style="{StaticResource FilterControlStyle}" />
                    <CalendarDatePicker
                        x:Name="FilterEndDatePicker"
                        AutomationProperties.Name="To Date Calendar"
                        Header="To Date:"
                        PlaceholderText="Select end date"
                        Style="{StaticResource FilterControlStyle}" />
                    <ComboBox
                        x:Name="ShiftStatusComboBox"
                        AutomationProperties.Name="Shift Status Filter"
                        Header="Shift Status:"
                        Style="{StaticResource FilterControlStyle}">
                        <ComboBoxItem Content="All" IsSelected="True" />
                        <ComboBoxItem Content="Closed" />
                        <ComboBoxItem Content="Active" />
                    </ComboBox>
                    <ComboBox
                        x:Name="OrderStatusComboBox"
                        AutomationProperties.Name="Order Status Filter"
                        Header="Order Status:"
                        Style="{StaticResource FilterControlStyle}">
                        <ComboBoxItem Content="All" IsSelected="True" />
                        <ComboBoxItem Content="Completed" />
                        <ComboBoxItem Content="Pending" />
                        <ComboBoxItem Content="Canceled" />
                    </ComboBox>
                    <Button
                        Margin="0,0,10,0"
                        VerticalAlignment="Bottom"
                        AutomationProperties.Name="Apply Filters Button"
                        Click="ApplyFilters_ButtonClick"
                        Content="Apply Filters"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        VerticalAlignment="Bottom"
                        AutomationProperties.Name="Reset Filters Button"
                        Click="ResetFilters_ButtonClick"
                        Content="Reset Filters"
                        Style="{StaticResource AccentButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  ListView  -->
        <Border
            x:Name="ShiftsListViewPanel"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Padding="10"
            AutomationProperties.Name="Shift List"
            Background="White"
            CornerRadius="5">
            <ListView
                x:Name="ShiftsListView"
                AutomationProperties.Name="Shifts"
                ItemsSource="{Binding FilteredShifts}"
                SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0,4,0,4" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ListViewItemPresenter
                                        PointerOverBackground="#F3F4F6"
                                        SelectedBackground="Transparent"
                                        SelectedPointerOverBackground="#F3F4F6" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Shift">
                        <Expander
                            HorizontalAlignment="Stretch"
                            AutomationProperties.Name="Shift Expander"
                            Background="Transparent"
                            Expanding="ShowOrder_OnExpanding"
                            Tag="{Binding ShiftID}">
                            <!--  Common Information  -->
                            <Expander.Header>
                                <Grid
                                    Margin="0,4"
                                    Padding="16"
                                    AutomationProperties.Name="Shift Summary"
                                    Background="White"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <!--  Shift ID  -->
                                        <ColumnDefinition Width="180" />
                                        <!--  Date  -->
                                        <ColumnDefinition Width="240" />
                                        <!--  Start and End Time  -->
                                        <ColumnDefinition Width="1.5*" MinWidth="180" />
                                        <!--  Sales and Orders  -->
                                        <ColumnDefinition Width="2*" MinWidth="220" />
                                        <!--  Cash Summary  -->
                                        <ColumnDefinition Width="120" />
                                        <!--  Status  -->
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Shift ID"
                                        Foreground="#1F2937"
                                        Style="{StaticResource BodyTextBlockStyle}">
                                        <Run Text="Shift #" />
                                        <Run Foreground="#6B7280" Text="{Binding ShiftID}" />
                                    </TextBlock>
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Shift Date"
                                        Foreground="#1F2937"
                                        Style="{StaticResource SubtitleTextBlockStyle}">
                                        <Run Text="Date: " />
                                        <Run Foreground="#6B7280" Text="{Binding StartTime, Converter={StaticResource DateToFormattedStringConverter}}" />
                                    </TextBlock>
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Shift Times"
                                        Foreground="#1F2937"
                                        Style="{StaticResource SubtitleTextBlockStyle}">
                                        <Run Text="Start: " />
                                        <Run Foreground="#6B7280" Text="{Binding StartTime, Converter={StaticResource TimeToFormattedStringConverter}}" />
                                        <Run Text=" End: " />
                                        <Run Foreground="#6B7280" Text="{Binding EndTime, Converter={StaticResource TimeToFormattedStringConverter}}" />
                                    </TextBlock>
                                    <StackPanel
                                        Grid.Column="3"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Sales and Orders">
                                        <TextBlock
                                            AutomationProperties.Name="Total Sales"
                                            FontWeight="Bold"
                                            Foreground="#1F2937"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{Binding TotalSales, Converter={StaticResource CurrencyFormatter}}" />
                                        <TextBlock
                                            AutomationProperties.Name="Total Orders"
                                            Foreground="#6B7280"
                                            Style="{StaticResource CaptionTextBlockStyle}">
                                            <Run Text="{Binding TotalOrders}" />
                                            <Run Text=" Orders" />
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Column="4"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Cash Summary"
                                        Foreground="#1F2937"
                                        Style="{StaticResource BodyTextBlockStyle}">
                                        <Run Text="Cash: " />
                                        <Run Foreground="#6B7280" Text="{Binding OpeningCash, Converter={StaticResource CurrencyFormatter}}" />
                                        <Run Text=" → " />
                                        <Run Foreground="#1F2937" Text="{Binding ClosingCash, Converter={StaticResource CurrencyFormatter}}" />
                                    </TextBlock>
                                    <StackPanel
                                        Grid.Column="5"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        AutomationProperties.Name="Shift Status"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            AutomationProperties.Name="Status Text"
                                            Foreground="#6B7280"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{Binding Status}" />
                                        <SymbolIcon
                                            Margin="8,0,0,0"
                                            AutomationProperties.Name="Status Icon"
                                            Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                            Symbol="{Binding Status, Converter={StaticResource StatusIconConverter}}" />
                                    </StackPanel>
                                </Grid>
                            </Expander.Header>
                            <!--  Orders List  -->
                            <ListView
                                x:Name="Orders"
                                Margin="16,8,16,8"
                                ItemsSource="{Binding DataContext.OrdersForShift, ElementName=ShiftsListView}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.VerticalScrollMode="Enabled"
                                SelectionMode="Single">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0,4,0,4" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <ListViewItemPresenter SelectedBackground="Transparent" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Order">
                                        <Grid
                                            Margin="0,4"
                                            Padding="12"
                                            AutomationProperties.Name="Order Item"
                                            Background="White"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150" />
                                                <!--  Order ID  -->
                                                <ColumnDefinition Width="2*" MinWidth="150" />
                                                <!--  Total Amount  -->
                                                <ColumnDefinition Width="1*" MinWidth="120" />
                                                <!--  Status  -->
                                                <ColumnDefinition Width="120" />
                                                <!--  View Details  -->
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                AutomationProperties.Name="Order ID"
                                                Foreground="#1F2937"
                                                Style="{StaticResource BodyTextBlockStyle}">
                                                <Run Text="Order #" />
                                                <Run Foreground="#6B7280" Text="{Binding OrderID}" />
                                            </TextBlock>
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Center"
                                                AutomationProperties.Name="Total Amount"
                                                Foreground="#1F2937"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{Binding TotalAmount, Converter={StaticResource CurrencyFormatter}, FallbackValue='$0.00'}" />
                                            <TextBlock
                                                Grid.Column="2"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Center"
                                                AutomationProperties.Name="Order Status"
                                                Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}, FallbackValue=Gray}"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{Binding Status}" />
                                            <Button
                                                Grid.Column="3"
                                                Margin="16,0,0,0"
                                                VerticalAlignment="Center"
                                                AutomationProperties.Name="View Details Button"
                                                Click="ShowOrderDetails_ButtonCLick"
                                                Content="View Details"
                                                Style="{StaticResource AccentButtonStyle}"
                                                Tag="{Binding OrderID}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!--  Order Details Panel  -->
        <Border
            x:Name="OrderDetailsPanel"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10,0,0,0"
            Padding="20"
            Background="White"
            CornerRadius="12"
            Visibility="Collapsed">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>
            <StackPanel Spacing="16">
                <!--  Header  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="Order Details Title"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="#111827"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="Receipt Details" />
                    <Button
                        Grid.Column="1"
                        Padding="4"
                        AutomationProperties.Name="Close Order Details Button"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="HideOrderDetails_ButtonCLick">
                        <FontIcon Foreground="#6B7280" Glyph="" />
                    </Button>
                </Grid>

                <!--  First Divider  -->
                <Border
                    Height="1"
                    Margin="0,8,0,8"
                    Background="#E5E7EB" />

                <!--  Scrollable Content  -->
                <ScrollViewer
                    MaxHeight="400"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollBarVisibility="Auto"
                    VerticalScrollMode="Enabled">
                    <StackPanel Spacing="16">
                        <!--  Order Meta Info  -->
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#374151"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="Receipt Information" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Order ID Label"
                                    Foreground="#4B5563"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Order ID:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Order ID Value"
                                    Foreground="#111827"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.SelectedOrder.OrderID, Mode=OneWay, FallbackValue='N/A'}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Customer Label"
                                    Foreground="#4B5563"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Customer:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Customer Value"
                                    Foreground="#111827"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.CustomerForSelectedOrder.Name, Mode=OneWay, FallbackValue='N/A'}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Status Label"
                                    Foreground="#4B5563"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Status:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Status Value"
                                    Foreground="{x:Bind ViewModel.SelectedOrder.Status, Mode=OneWay, Converter={StaticResource StatusColorConverter}, FallbackValue=Gray}"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.SelectedOrder.Status, Mode=OneWay, FallbackValue='Unknown'}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Payment Method Label"
                                    Foreground="#4B5563"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Payment Method:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Payment Method Value"
                                    Foreground="#111827"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.SelectedOrder.PaymentMethod, Mode=OneWay, FallbackValue='N/A'}" />
                            </Grid>
                        </StackPanel>

                        <!--  Items Table  -->
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#374151"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="Items" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" MinWidth="150" />
                                    <ColumnDefinition Width="1*" MinWidth="60" />
                                    <ColumnDefinition Width="1*" MinWidth="80" />
                                    <ColumnDefinition Width="1*" MinWidth="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Item Header"
                                    FontWeight="SemiBold"
                                    Foreground="#374151"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Item" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Quantity Header"
                                    FontWeight="SemiBold"
                                    Foreground="#374151"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Qty" />
                                <TextBlock
                                    Grid.Column="2"
                                    AutomationProperties.Name="Price Header"
                                    FontWeight="SemiBold"
                                    Foreground="#374151"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Price" />
                                <TextBlock
                                    Grid.Column="3"
                                    AutomationProperties.Name="Total Header"
                                    FontWeight="SemiBold"
                                    Foreground="#374151"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Total" />
                            </Grid>
                            <Border
                                Height="1"
                                Margin="0,4,0,8"
                                Background="#E5E7EB" />
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.OrderDetailsWithMenuItems, Mode=OneWay}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:OrderDetailWithMenuItem">
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" MinWidth="150" />
                                                <ColumnDefinition Width="1*" MinWidth="60" />
                                                <ColumnDefinition Width="1*" MinWidth="80" />
                                                <ColumnDefinition Width="1*" MinWidth="80" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                AutomationProperties.Name="Item Name"
                                                Foreground="#1F2937"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind MenuItem.Name, Mode=OneWay, FallbackValue='N/A'}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                AutomationProperties.Name="Item Quantity"
                                                Foreground="#1F2937"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind OrderDetail.Quantity, Mode=OneWay, FallbackValue='0'}" />
                                            <TextBlock
                                                Grid.Column="2"
                                                AutomationProperties.Name="Item Price"
                                                Foreground="#1F2937"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind OrderDetail.UnitPrice, Mode=OneWay, Converter={StaticResource CurrencyFormatter}, FallbackValue='$0.00'}" />
                                            <TextBlock
                                                Grid.Column="3"
                                                AutomationProperties.Name="Item Total"
                                                FontWeight="SemiBold"
                                                Foreground="#1F2937"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind OrderDetail.Subtotal, Mode=OneWay, Converter={StaticResource CurrencyFormatter}, FallbackValue='$0.00'}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>

                        <!--  Divider  -->
                        <Border
                            Height="1"
                            Margin="0,8,0,8"
                            Background="#E5E7EB" />

                        <!--  Totals  -->
                        <StackPanel Spacing="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Subtotal Label"
                                    Foreground="#6B7280"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Subtotal:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Subtotal Value"
                                    Foreground="#1F2937"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.SelectedOrder.TotalAmount, Mode=OneWay, Converter={StaticResource CurrencyFormatter}, FallbackValue='$0.00'}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Tax Label"
                                    Foreground="#6B7280"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Tax:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Tax Value"
                                    Foreground="#1F2937"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="$1.00" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Discount Label"
                                    Foreground="#6B7280"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Discount:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Discount Value"
                                    Foreground="#DC2626"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.SelectedOrder.Discount, Mode=OneWay, Converter={StaticResource CurrencyFormatter}, FallbackValue='$0.00'}" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    AutomationProperties.Name="Total Label"
                                    FontWeight="SemiBold"
                                    Foreground="#111827"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="Total:" />
                                <TextBlock
                                    Grid.Column="1"
                                    AutomationProperties.Name="Total Value"
                                    FontWeight="SemiBold"
                                    Foreground="#111827"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind ViewModel.SelectedOrder.FinalAmount, Mode=OneWay, Converter={StaticResource CurrencyFormatter}, FallbackValue='$0.00'}" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!--  Print/Save as PDF Button  -->
                <Button
                    Margin="0,8,0,0"
                    HorizontalAlignment="Right"
                    AutomationProperties.Name="Print or Save as PDF Button"
                    Click="PrintSaveAsPDF_Click"
                    Content="Print/Save as PDF"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </Border>

    </Grid>
</Page>
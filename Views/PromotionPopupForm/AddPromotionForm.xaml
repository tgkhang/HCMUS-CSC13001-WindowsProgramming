<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="POS_For_Small_Shop.Views.PromotionPopupForm.AddPromotionForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:POS_For_Small_Shop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POS_For_Small_Shop.Views.PromotionPopupForm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:POS_For_Small_Shop.Data.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converter:CurrencyFormatter x:Key="CurrencyConverter" />
        <converter:ImageFullPathConverter x:Key="ImageFullPathConverter" />
        <converter:DateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter" />
        <converter:FloatToStringConverter x:Key="FloatToStringConverter" />
    </UserControl.Resources>

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Enabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Disabled">
        <StackPanel MaxWidth="800" Margin="10">
            <!--  Header  -->
            <Border
                Padding="15"
                Background="#003D57"
                CornerRadius="5">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="24"
                    Foreground="White"
                    Text="Add Promotion" />
            </Border>

            <!--  Body  -->
            <Grid
                Margin="0,10,0,0"
                Padding="15"
                Background="White"
                CornerRadius="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="200" />
                    <ColumnDefinition Width="1*" MinWidth="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Select Item  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Select Item" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="SelectAllButton"
                                Width="75"
                                Margin="0,0,10,0"
                                Background="#003D57"
                                Click="SelectAllButton_Click"
                                Content="All"
                                Foreground="White" />
                            <Button
                                x:Name="UnselectAllButton"
                                Width="75"
                                Background="#003D57"
                                Click="UnselectAllButton_Click"
                                Content="Clear"
                                Foreground="White" />
                        </StackPanel>
                    </Grid>
                    <Border
                        Margin="0,5,0,0"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <GridView
                            x:Name="ItemGridView"
                            MaxHeight="300"
                            Padding="5"
                            ItemsSource="{Binding AvaibleItems}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionChanged="AssignSelectedItem"
                            SelectionMode="Multiple">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="models:MenuItem">
                                    <Border
                                        Margin="5"
                                        Padding="8"
                                        Background="#FFFFFF"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="3">
                                        <StackPanel Padding="5" Orientation="Vertical">
                                            <Image
                                                Width="100"
                                                Height="100"
                                                Source="{Binding ImagePath, Converter={StaticResource ImageFullPathConverter}}"
                                                Stretch="Uniform" />
                                            <TextBlock
                                                Foreground="#333333"
                                                Text="{x:Bind Name}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Foreground="#666666"
                                                Text="{x:Bind SellingPrice}"
                                                TextAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Border>
                </StackPanel>

                <!--  Promotion Name  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,10">
                    <TextBlock FontWeight="SemiBold" Text="Promotion Name" />
                    <TextBox
                        x:Name="PromotionName"
                        Margin="0,5,0,0"
                        PlaceholderText="Enter promotion name"
                        Text="{Binding NewPromotion.PromoName, Mode=TwoWay}" />
                </StackPanel>

                <!--  Discount Type & Value  -->
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,5,10">
                    <TextBlock FontWeight="SemiBold" Text="Discount Type" />
                    <ComboBox
                        x:Name="DiscountType"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{x:Bind discountTypeValues}"
                        PlaceholderText="Select discount type"
                        SelectedItem="{Binding NewPromotion.Details.DiscountType, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5,0,0,10">
                    <TextBlock FontWeight="SemiBold" Text="Discount Value" />
                    <TextBox
                        x:Name="DiscountValue"
                        Margin="0,5,0,0"
                        PlaceholderText="Enter discount value"
                        Text="{Binding NewPromotion.Details.DiscountValue, Converter={StaticResource FloatToStringConverter}, Mode=TwoWay}" />
                </StackPanel>

                <!--  Start & End Date  -->
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,0,5,10">
                    <TextBlock FontWeight="SemiBold" Text="Start Date" />
                    <CalendarDatePicker
                        x:Name="StartDate"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch"
                        Date="{Binding NewPromotion.StartDate, Converter={StaticResource DateTimeToDateTimeOffsetConverter}, Mode=TwoWay}"
                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                        PlaceholderText="dd / mm / yyyy" />
                </StackPanel>

                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5,0,0,10">
                    <TextBlock FontWeight="SemiBold" Text="End Date" />
                    <CalendarDatePicker
                        x:Name="EndDate"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Stretch"
                        Date="{Binding NewPromotion.EndDate, Converter={StaticResource DateTimeToDateTimeOffsetConverter}, Mode=TwoWay}"
                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                        PlaceholderText="dd / mm / yyyy" />
                </StackPanel>

                <!--  Description  -->
                <StackPanel
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,10">
                    <TextBlock FontWeight="SemiBold" Text="Description (Optional)" />
                    <TextBox
                        x:Name="Description"
                        MinHeight="80"
                        Margin="0,5,0,0"
                        AcceptsReturn="True"
                        PlaceholderText="Enter description"
                        Text="{Binding NewPromotion.Details.Description, Mode=TwoWay}" />
                </StackPanel>

                <!--  Buttons  -->
                <StackPanel
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="SaveButton"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        Background="#003D57"
                        Click="SaveButton_CLick"
                        Command="{Binding AddPromotionCommand}"
                        Content="Save"
                        Foreground="White" />
                    <Button
                        x:Name="CancelButton"
                        MinWidth="100"
                        Click="CancelButton_CLick"
                        Content="Cancel" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>


</UserControl>

<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="POS_For_Small_Shop.Components.ProductItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="200" Height="250">
    <Button>
        <Border  Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center">

                <!-- Product Image -->
                <Image x:Name="ProductImage" Width="100" Height="100" Stretch="UniformToFill" 
               Source="https://via.placeholder.com/100" />

                <!-- Product Name -->
                <TextBlock x:Name="ProductName" FontSize="16" FontWeight="Bold" Text="Product Name" 
                   Margin="5,5,5,0" TextAlignment="Center"/>

                <!-- Prices (Regular + Sale) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="ProductPrice" FontSize="14" Foreground="Black" 
                       Text="$10.00" Margin="0,5,5,0"/>
                    <TextBlock x:Name="SalePrice" FontSize="14" Foreground="Red" 
                       Text="$8.00" Margin="0,5,5,0" Visibility="Collapsed"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Button>
</UserControl>

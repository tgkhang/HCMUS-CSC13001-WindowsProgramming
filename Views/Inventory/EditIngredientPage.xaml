<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS_For_Small_Shop.Views.Inventory.EditIngredientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views.Inventory"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Width="300">
            <TextBox Header="Name" Text="{Binding SelectedIngredient.IngredientName, Mode=TwoWay}" />
            <TextBox Header="Stock" Text="{Binding SelectedIngredient.Stock, Mode=TwoWay}" />
            <ComboBox Header="Category"
                      ItemsSource="{Binding Categories}" 
                      DisplayMemberPath="Name" 
                      SelectedItem="{Binding SelectedIngredient.CategoryID, Mode=TwoWay}" />

            <Button Content="Save" Margin="0,10,0,0" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Page>

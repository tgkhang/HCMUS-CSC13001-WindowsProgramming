<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_For_Small_Shop.Views.OpenShiftPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <NavigationView x:Name="navi"
                    Header="Dashboard"
                    PaneDisplayMode="Left"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    OpenPaneLength="200"  
                   
                    CompactModeThresholdWidth="100">
        <!-- Minimize when needed -->

        <!-- Main Menu Items -->
        <NavigationView.MenuItems>
            <NavigationViewItem Tag="SamplePage1" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/LockScreenLogo.png" Width="40" Height="40"/>
                    <TextBlock Text="New Order" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </NavigationViewItem>

            <NavigationViewItem Tag="SamplePage2" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/LockScreenLogo.png" Width="40" Height="40"/>
                    <TextBlock Text="Open Shift" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </NavigationViewItem>

            <NavigationViewItem Tag="SamplePage3" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/LockScreenLogo.png" Width="40" Height="40"/>
                    <TextBlock Text="Inventory" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </NavigationViewItem>

            <NavigationViewItem Tag="SamplePage4" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/LockScreenLogo.png" Width="40" Height="40"/>
                    <TextBlock Text="Customer" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </NavigationViewItem>

            <NavigationViewItem Tag="SamplePage5" Padding="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/LockScreenLogo.png" Width="40" Height="40"/>
                    <TextBlock Text="Receipt" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <!-- Footer Menu Items -->
        <NavigationView.FooterMenuItems>
            <NavigationViewItem Content="Account" Tag="SamplePage4" Icon="Contact"/>
            <NavigationViewItem Content="Your Cart" Tag="SamplePage5" Icon="Shop"/>
            <NavigationViewItem Content="Help" Tag="SamplePage6" Icon="Help"/>
        </NavigationView.FooterMenuItems>

        <!-- Content Frame for Page Navigation -->
        <NavigationView.Content>
            <Frame x:Name="contentFrame9"/>
        </NavigationView.Content>

    </NavigationView>
</Page>

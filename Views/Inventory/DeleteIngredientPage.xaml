<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS_For_Small_Shop.Views.Inventory.DeleteIngredientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views.Inventory"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Width="300">
            <TextBlock Text="Are you sure you want to delete this ingredient?" 
                       FontSize="16" TextAlignment="Center" Margin="0,0,0,10" />
            <TextBlock Text="{Binding SelectedIngredient.IngredientName}" 
                       FontSize="20" FontWeight="Bold" TextAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Delete" Margin="0,0,10,0" Click="Delete_Click" />
                <Button Content="Cancel" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

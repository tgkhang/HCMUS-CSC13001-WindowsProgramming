<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_For_Small_Shop.Views.MenuManagement.MenuItemListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views.MenuManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:POS_For_Small_Shop.Converters"
    xmlns:models="using:POS_For_Small_Shop.Data.Models"
    xmlns:viewmodels="using:POS_For_Small_Shop.ViewModels.MenuManagement"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>
        <!-- Custom converters -->
        <converters:CurrencyFormatter x:Key="CurrencyFormatter"/>
        <converters:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
        <converters:NotNullToVisibleConverter x:Key="NotNullToVisibleConverter"/>
        <converters:CategoryIdToNameConverter x:Key="CategoryIdToNameConverter"/>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with search and add button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Menu Items" 
                        Style="{StaticResource TitleTextBlockStyle}" 
                        Margin="0,0,0,10"/>
                <AutoSuggestBox 
                 x:Name="SearchBox" 
                 PlaceholderText="Search Menu Items..." 
                 Width="400"
                 HorizontalAlignment="Left"
                 QueryIcon="Find"
                 TextChanged="SearchBox_TextChanged"/>
            </StackPanel>

            <Button 
             Grid.Column="1" 
             x:Name="AddItemButton" 
             Content="Add Item" 
             Style="{StaticResource AccentButtonStyle}"
             Click="AddItemButton_Click"
             VerticalAlignment="Bottom"/>
        </Grid>

        <!-- Menu Item list and details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Items list -->
            <ListView 
          x:Name="ItemListView"
          Grid.Column="0"
          SelectionMode="Single"
          SelectionChanged="ItemListView_SelectionChanged"
          BorderThickness="1"
          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
          Padding="0"
          Margin="0,0,20,0">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:MenuItem">
                        <Grid Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!--
              
                                  <Image Grid.Column="0" 
                                Width="50" 
                                Height="50" 
                                Margin="0,0,12,0"
                                Source="{x:Bind ImagePath, Mode=OneWay}" 
                                Stretch="UniformToFill"/>
                            
                            -->
      

                            <!-- Menu Item Info -->
                            <StackPanel Grid.Column="1" Spacing="10">
                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{x:Bind SellingPrice, Mode=OneWay, Converter={StaticResource CurrencyFormatter}}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    <TextBlock Text="|" Style="{StaticResource BodyTextBlockStyle}" Opacity="0.5"/>
                                    <TextBlock Text="{x:Bind CategoryID, Mode=OneWay, Converter={StaticResource CategoryIdToNameConverter}}" Style="{StaticResource BodyTextBlockStyle}" Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                <Button Content="Edit" Click="EditItemButton_Click" Tag="{x:Bind MenuItemID}"/>
                                <Button Content="Delete" Click="DeleteItemButton_Click" Tag="{x:Bind MenuItemID}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

          <!-- Item details/edit form -->
          <Grid 
          x:Name="ItemDetailsPanel" 
          Grid.Column="1" 
          Width="350"
          BorderThickness="1"
          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
          Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form header -->
                <TextBlock 
              Grid.Row="0" 
              x:Name="FormHeaderText" 
              Text="Add Item" 
              Style="{StaticResource SubtitleTextBlockStyle}" 
              Margin="20,20,20,20"/>

                <!-- ScrollViewer for form fields -->
                <ScrollViewer Grid.Row="1" 
                          VerticalScrollMode="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollMode="Disabled"
                          Padding="20,0,20,0">
                    <!-- Form fields -->
                    <StackPanel Spacing="15">
                        <TextBox x:Name="NameTextBox" Header="Name" PlaceholderText="Enter item name"/>
                        <TextBox x:Name="PriceTextBox" Header="Price" PlaceholderText="Enter item price"/>
                        <!-- Update the ComboBox in the form -->
                        <ComboBox x:Name="CategoryComboBox" 
                           Header="Category" 
                           PlaceholderText="Select a category"
                           SelectionChanged="CategoryComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="models:Category">
                                    <TextBlock Text="{x:Bind Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBox x:Name="ImagePathTextBox" Header="Image Path" 
                              PlaceholderText="URL image"
                              IsReadOnly="True"
                              />

                        <Button x:Name="PickAPhotoButton" Content="Choose a picture"
                         Click="PickAPhotoButton_Click" Margin="0,0,0,10"/>

                        <!-- Image preview here -->
                        <Image x:Name="PreviewImage"
                        MaxHeight="300"
                        Width="Auto"
                        Stretch="Uniform"
                        Margin="0,10,0,20"
                        Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Form actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="20,20,20,20">
                    <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
                    <Button x:Name="SaveButton" Content="Save" Style="{StaticResource AccentButtonStyle}" Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Empty state -->
        <TextBlock 
         x:Name="EmptyStateText" 
         Grid.Row="1" 
         Text="No menu items found. Add a new item to get started." 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
         Opacity="0.7"
         Visibility="Collapsed"/>
    </Grid>
</Page>

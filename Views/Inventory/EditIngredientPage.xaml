<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS_For_Small_Shop.Views.Inventory.EditIngredientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid Padding="20">
		<StackPanel>
			<TextBox Header="Ingredient Name" Text="{Binding SelectedIngredient.IngredientName, Mode=TwoWay}" />
			<TextBox Header="Stock" Text="{Binding SelectedIngredient.Stock, Mode=TwoWay}" />
			<Button Content="Save" Click="SaveIngredient_Click" />
		</StackPanel>
	</Grid>
</Page>

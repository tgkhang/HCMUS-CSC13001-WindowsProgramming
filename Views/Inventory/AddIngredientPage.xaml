<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="POS_For_Small_Shop.Views.Inventory.AddIngredientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views.Inventory"
    xmlns:viewmodels="using:POS_For_Small_Shop.ViewModels"
    xmlns:models="using:POS_For_Small_Shop.Data.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" RowSpacing="10">
        <StackPanel Spacing="10">
            <TextBlock Text="Ingredient Name" FontWeight="Bold" />
            <TextBox x:Name="IngredientNameTextBox" PlaceholderText="Enter ingredient name" />

            <TextBlock Text="Category ID" FontWeight="Bold" />
            <TextBox x:Name="CategoryIDTextBox" PlaceholderText="Enter category ID" InputScope="Number" />

            <TextBlock Text="Stock" FontWeight="Bold" />
            <TextBox x:Name="StockTextBox" PlaceholderText="Enter stock amount" InputScope="Number" />

            <TextBlock Text="Unit" FontWeight="Bold" />
            <TextBox x:Name="UnitTextBox" PlaceholderText="Enter unit (e.g., kg, L)" />

            <TextBlock Text="Purchase Price" FontWeight="Bold" />
            <TextBox x:Name="PurchasePriceTextBox" PlaceholderText="Enter purchase price" InputScope="Number" />

            <TextBlock Text="Supplier" FontWeight="Bold" />
            <TextBox x:Name="SupplierTextBox" PlaceholderText="Enter supplier name" />

            <TextBlock Text="Expiry Date" FontWeight="Bold" />
            <TextBox x:Name="ExpiryDateTextBox" PlaceholderText="Enter expiry date (yyyy-MM-dd)" />

            <!-- Nút thêm nguyên liệu -->
            <Button Content="Add Ingredient" 
                    HorizontalAlignment="Center"
                    Click="AddIngredient_Click"
                    Background="#4CAF50" 
                    Foreground="White" 
                    Padding="10" 
                    Margin="10,20,10,0"/>
        </StackPanel>
    </Grid>
</Page>

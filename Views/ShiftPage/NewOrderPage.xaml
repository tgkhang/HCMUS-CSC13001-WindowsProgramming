<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="POS_For_Small_Shop.Views.NewOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_For_Small_Shop.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:POS_For_Small_Shop.Data.Models"
    xmlns:converters="using:POS_For_Small_Shop.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:CurrencyFormatter x:Key="CurrencyFormatter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Products and Categories -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <AutoSuggestBox 
                Grid.Row="0"
                PlaceholderText="Search products..." 
                QueryIcon="Find"
                Margin="0,0,0,15"
                TextChanged="SearchBox_TextChanged"/>

            <!-- Categories -->
            <ScrollViewer Grid.Row="1" HorizontalScrollMode="Auto" VerticalScrollMode="Disabled" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="All" Click="CategoryButton_Click" Tag="0" Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="Coffee" Click="CategoryButton_Click" Tag="1"/>
                    <Button Content="Pastries" Click="CategoryButton_Click" Tag="2"/>
                    <Button Content="Drinks" Click="CategoryButton_Click" Tag="3"/>
                    <Button Content="Snacks" Click="CategoryButton_Click" Tag="4"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Products Grid -->
            <GridView 
                x:Name="ProductsGridView"
                Grid.Row="2"
                SelectionMode="None"
                ItemsSource="{x:Bind FilteredMenuItems, Mode=OneWay}"
                IsItemClickEnabled="True"
                ItemClick="ProductsGridView_ItemClick">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:MenuItem">
                        <Grid Width="150" Height="180" Margin="5" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Product Image -->
                            <Image 
                                Grid.Row="0"
                                Source="{x:Bind ImagePath}" 
                                Stretch="UniformToFill"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>

                            <!-- Product Name -->
                            <TextBlock 
                                Grid.Row="1"
                                Text="{x:Bind Name}" 
                                Margin="10,5,10,0"
                                FontWeight="SemiBold"
                                TextWrapping="Wrap"
                                TextTrimming="CharacterEllipsis"
                                MaxLines="2"/>

                            <!-- Product Price -->
                            <TextBlock 
                                Grid.Row="2"
                                Text="{x:Bind SellingPrice, Converter={StaticResource CurrencyFormatter}}" 
                                Margin="10,0,10,10"
                                Foreground="{ThemeResource SystemAccentColor}"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <!-- Right side - Order Summary and Checkout -->
        <Grid Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Order Header -->
            <StackPanel Grid.Row="0" Padding="20">
                <TextBlock Text="Current Order" FontSize="20" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Order #" VerticalAlignment="Center"/>
                    <TextBlock x:Name="OrderNumberText" Text="1001" Margin="5,0,0,0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Content="New Order" Margin="15,0,0,0" Click="NewOrder_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Order Items -->
            <ListView 
                x:Name="OrderItemsListView"
                Grid.Row="1"
                ItemsSource="{x:Bind OrderItems, Mode=OneWay}"
                SelectionMode="None"
                Margin="10,0,10,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:OrderItemViewModel">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Product Name -->
                            <TextBlock 
                                Grid.Column="0" 
                                Text="{x:Bind Name}" 
                                VerticalAlignment="Center"
                                TextTrimming="CharacterEllipsis"/>

                            <!-- Quantity Controls -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,10,0">
                                <Button 
                                    Content="-" 
                                    Width="30" 
                                    Height="30"
                                    Click="DecreaseQuantity_Click"
                                    Tag="{x:Bind MenuItemID}"/>
                                <TextBlock 
                                    Text="{x:Bind Quantity}" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Width="30"
                                    TextAlignment="Center"/>
                                <Button 
                                    Content="+" 
                                    Width="30" 
                                    Height="30"
                                    Click="IncreaseQuantity_Click"
                                    Tag="{x:Bind MenuItemID}"/>
                            </StackPanel>

                            <!-- Item Total -->
                            <TextBlock 
                                Grid.Column="2" 
                                Text="{x:Bind Total, Converter={StaticResource CurrencyFormatter}}" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>

                            <!-- Remove Button -->
                            <Button 
                                Grid.Column="3"
                                Content="âœ•"
                                Width="30"
                                Height="30"
                                Click="RemoveItem_Click"
                                Tag="{x:Bind MenuItemID}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Order Summary and Checkout -->
            <Grid Grid.Row="2" Padding="20" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Subtotal -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal" Margin="0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind Subtotal, Mode=OneWay, Converter={StaticResource CurrencyFormatter}}" Margin="0,5" HorizontalAlignment="Right"/>

                <!-- Tax -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tax (8%)" Margin="0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind Tax, Mode=OneWay, Converter={StaticResource CurrencyFormatter}}" Margin="0,5" HorizontalAlignment="Right"/>

                <!-- Discount -->
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Discount" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DiscountComboBox" Margin="10,0,0,0" Width="100" SelectionChanged="DiscountComboBox_SelectionChanged">
                        <ComboBoxItem Content="None" Tag="0"/>
                        <ComboBoxItem Content="5%" Tag="5"/>
                        <ComboBoxItem Content="10%" Tag="10"/>
                        <ComboBoxItem Content="15%" Tag="15"/>
                        <ComboBoxItem Content="20%" Tag="20"/>
                    </ComboBox>
                </StackPanel>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind Discount, Mode=OneWay, Converter={StaticResource CurrencyFormatter}}" Margin="0,5" HorizontalAlignment="Right"/>

                <!-- Separator -->
                <Rectangle Grid.Row="3" Grid.ColumnSpan="2" Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,10"/>

                <!-- Total -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Total" FontWeight="SemiBold" FontSize="16" Margin="0,5"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{x:Bind Total, Mode=OneWay, Converter={StaticResource CurrencyFormatter}}" FontWeight="SemiBold" FontSize="16" Margin="0,5" HorizontalAlignment="Right"/>

                <!-- Payment Buttons -->
                <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center" Spacing="10">
                    <Button Content="Cash Payment" Width="120" Click="CashPayment_Click"/>
                    <Button Content="Card Payment" Width="120" Click="CardPayment_Click"/>
                    <Button Content="Cancel Order" Width="120" Click="CancelOrder_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

